@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">x</button>
        @TempData["MensagemErro"]
    </div>
}
<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input asp-for="Email" type="email" class="form-control" id="Email" placeholder="Digite seu e-mail">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="mb-3">
        <label for="Senha" class="form-label">Senha</label>
        <input asp-for="Senha" type="password" class="form-control" id="Senha" placeholder="Digite sua senha">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Entrar</button>
</form>