@model AlunoModel
@{
    ViewData["Title"] = "Cadastrar Estudante";
}

<html lang="en">
<head>
    <meta charset="utf-8" />
 </head>

<body>
<div class="text-left">
    <form asp-controller="Aluno" asp-action="Criar" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputNome">Nome</label>
                <input type="text" asp-for="Nome" class="form-control" id="inputNome" placeholder="Nome">
                @Html.ValidationMessageFor(x => x.Nome)
            </div>
            <div class="form-group col-md-6">
                <label for="inputCPF">CPF</label>
                <input type="text" asp-for="CPF" class="form-control" id="inputCPF" placeholder="CPF">
                    @Html.ValidationMessageFor(x => x.CPF)
            </div>
        </div>
        <div class="form-group col-md-6">
            <label for="inputEndereco">Endereco</label>
                <input type="text" asp-for="Endereco" class="form-control" id="inputEndereco" placeholder="Digite o endereço">
                @Html.ValidationMessageFor(x => x.Endereco)
        </div>
        <div class="form-group col-md-6">
            <label for="inputEstado">Estado</label>
                <select id="inputEstado" class="form-control">
                    
                    <option value="BA" selected>Bahia</option>
                    <option value="MG">Minas Gerais</option>
                    <option value="RJ">Rio de Janeiro</option>
                    <option value="SP">São Paulo</option>
                </select>
        </div>
        <div class="form-group col-md-6">
            <label for="inputCidade">Cidade</label>
                <select id="inputCidade" asp-for="CidadeID" class="form-control">
               
                   
                    <option value="1" selected>BeloHorizonte</option>
                    <option value="2">Lauro de Freitas</option>
                    <option value="3">Ribeirão Preto</option>
                    <option value="4">Rio de Janeiro</option>
                    <option value="5">Salvador</option>
                    <option value="6">São Paulo</option>

                </select>

                @Html.ValidationMessageFor(x => x.CidadeID)
        </div>
        <div class="form-group col-md-6">
            <label for="inputInstituicao">Instituicao</label>
                <select id="inputInstituicao" asp-for="InstituicaoID" class="form-control">
                   
                    <option value="1" selected>Estacio</option>
                    <option value="2">UFBA</option>
                    <option value="3">UNEB</option>
                    <option value="4">Unifacs</option>
                    <option value="5">Unime</option>
            </select>
                @Html.ValidationMessageFor(x => x.InstituicaoID)
        </div>
        <div class="form-group col-md-6">
            <label for="inputCurso">Nome do Curso</label>
                <input type="text" asp-for="NomeCurso" class="form-control" id="inputCurso" placeholder="Digite o nome do curso">
                @Html.ValidationMessageFor(x => x.NomeCurso)
        </div>
        <div class="form-group col-md-6">
            <label for="inputConclusao">Data de conclusão</label>
                <input type="date" asp-for="DataConclusao" class="form-control" id="inputConclusao" placeholder="Digite a data de conclusão" >
               
        </div>
        <br />
        <button type="submit" class="btn btn-primary btn-block" >Cadastrar</button>
            <button type="submit" class="btn btn-secondary  btn-block" asp-controller="Aluno" asp-action="Index">Voltar</button>
    </form>

</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
 <script src="~/lib/jQuery-Mask/dist/jquery.mask.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>