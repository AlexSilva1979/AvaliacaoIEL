@using AvaliacaoIEL.Enums;
@model List<UsuarioModel>
@{
    ViewData["Title"] = "Lista de Usuário ";


}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a role="button" class="btn btn-primary" asp-controller="Usuario" asp-action="Criar">Adicionar usuário</a>
    </div>
    <br />
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">x</button>
            @TempData["MensagemSucesso"]
    </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">x</button>
            @TempData["MensagemErro"]
        </div>
    }
    <br />
    <h1>Listagem de Usuários</h1>
    <table class="table table-striped" id="TableUsuario">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
                 <th scope="col">Perfil</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach(UsuarioModel usuario in Model)
                {
                    <tr>
                        <th scope="row">@usuario.Id</th>
                        <td>@usuario.Email</td>
                        <td>@(usuario.Perfil == PerfilEnum.Admin ? "Admin" : "Usuário")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" asp-route-id="@usuario.Id" class="btn btn-danger">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
             <tr class="odd"><td valign="top" colspan="5">Nenhum registro encontrado</td></tr>
            }

        </tbody>
    </table>
</div>

