@using AvaliacaoIEL.Enums;
@model UsuarioModel
@{
    ViewData["Title"] = "Cadastrar usuário";
}

<html lang="en">
<head>
    <meta charset="utf-8" />
 </head>

<body>
<div class="text-left">
    <form asp-controller="Usuario" asp-action="Criar" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail">Email</label>
                    <input type="text" asp-for="Email" class="form-control" id="inputEmail" placeholder="E-mail">
                @Html.ValidationMessageFor(x => x.Email)
            </div>
            <div class="form-group col-md-6">
                <label for="inputSenha">Senha</label>
                <input type="password" asp-for="Senha" class="form-control" id="inputSenha" placeholder="Senha">
                    @Html.ValidationMessageFor(x => x.Senha)
            </div>
        </div>
        <div class="form-group col-md-6">
            <label for="inputPergil">Perfil</label>
                <select asp-for="Perfil" id="inputPerfil" class="form-control">
                    <option value="0" selected>Selecione...</option>
                    <option value="@PerfilEnum.Admin">Administrador</option>
                    <option value="@PerfilEnum.Usuario">Usuario</option>
                    
            </select>
        </div>
        <br />
            <button type="submit" class="btn btn-primary" btn-block>Cadastrar</button>
             <button type="submit" class="btn btn-secondary  btn-block" asp-controller="Usuario" asp-action="Index">Voltar</button>
    </form>

</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
 <script src="~/lib/jQuery-Mask/dist/jquery.mask.min.js"></script>
</body>
</html>